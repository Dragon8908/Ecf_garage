{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %} 

{% block body %}
<div class="border-bottom"></div>
 <div class="container">
    <div class="row mt-5">
        <div class="col"></div>
        <div class="col">
            <form method="post">
                {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}  
                <div class="mb-3 text-center text-success form-fonts">
                    <span class="connecte">
                        Vous êtes bien connecté(e) en tant que {{ app.user.userIdentifier }} 
                        <a href="{{ path('app_deconnexion') }}">
                            <div class="mt-3 w-100 btn-sub_logout mb-2" >Se déconnecter</div>
                        </a>
                    </span>
                </div>
                {% endif %}

                <h1 class="mb-3 text-center form-fonts text-primary">Connexion au compte</h1>
                <label for="username" class="form-label mt-5 mb-3">Email</label>
                <input type="email" name="_username" id="username" class="form-control mb-3" value="{{ last_email }}" required>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="mt-3 w-100 login-btn mb-2" type="submit">Se connecter</button>
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>
{% endblock %}