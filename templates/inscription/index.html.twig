{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="border-bottom"></div>
<div class="container"> 
    <div class="text-success text-center fst-italic mt-3 mb-3"></div>
    <div class="row">
        <div class="col"></div>
        <div class="col form-fonts">
            <h1 class="mb-3 text-center mt-3 text-primary">Inscription</h1>
            {{ form_start(inscriptionForm) }} 
            <div class="text-primary">Nom</div>
            {{ form_row(inscriptionForm.nom) }}
            <div class="text-primary">Pr√©nom</div>
            {{ form_row(inscriptionForm.prenom) }}
            <div class="text-primary">Email</div>
            {{ form_row(inscriptionForm.email) }}
            <div class="text-primary">Mot de passe</div>
            {{ form_row(inscriptionForm.password, {label: false}) }}
            <button type="submit" class="mt-3 w-100 login-btn mb-2 text-secondary">S'inscrire</button>
            {{ form_end(inscriptionForm) }}
        </div>
        <div class="col"></div>
    </div> 
</div>
{% endblock %}