{% extends 'base.html.twig' %}

{% block title %}Nous contacter{% endblock %}

{% block body %}
<div class="row">
    <div class="col"></div>
    <div class="col form-fonts">
        <h1 class="mb-3 text-center mt-3 text-primary">Contact</h1>
        {{ form_start(contactForm, {'attr': {'id': 'contact-form'}}) }}
        <div class="text-primary">Nom</div>
        {{ form_row(contactForm.nom) }}
        <div class="text-primary">Prénom</div>
        {{ form_row(contactForm.prenom) }}
        <div class="text-primary">Email</div>
        {{ form_row(contactForm.email) }}
        <div class="text-primary">Téléphone</div>
        {{ form_row(contactForm.telephone) }}
        <div class="text-primary">Raisons de votre message</div>
        {{ form_row(contactForm.sujet) }}
        <div class="text-primary">Votre message</div>
        {{ form_row(contactForm.message) }}
        <button type="submit" class="mt-3 w-100 btn-contact mb-2 text-secondary">Envoyer</button>
        {{ form_end(contactForm) }}
      
    </div>
    <div class="col"></div>
</div>  
{% endblock %}